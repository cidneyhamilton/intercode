%h1
  = @event.team_member_name.titleize.pluralize
  for
  %span.larp-title= @event.title
- if true || @team_members.any?
  %table.table
    %thead
      %tr
        %th Name
        %th
          Display as #{@event.team_member_name}
        %th Display Email Address
        %th Receive Email from Con
        %th Receive Email on Signup or Withdrawal
    %tbody
      - @team_members.each do |m|
        %tr
          %td= link_to(m.last_name + ', ' + m.first_name, edit_team_member_path(m))
          %td= if m.display then 'X' else ' ' end
          %td= if m.show_email then 'X' else ' ' end
          %td= if m.receive_con_email then 'X' else ' ' end
          %td= if m.receive_signup_email then 'X' else ' ' end

%p= link_to('Add a ' + @event.team_member_name, [:new, @event, :team_member])
